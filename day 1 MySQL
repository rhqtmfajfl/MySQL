select * from course1;

select * from course2;

show tables;

select * from information_schema.table_constraints where table_name = "EMP";
# from 뒤에 테이블 이름이 와야되는데 우리가 만든게 온게 아니다 information_schema.table_contraints 
# 제약조건에는 테이블 이름 을 EMP로 준다면 대문자로 주든 소문자로 주든 알아서 비교해 준다.


select * from information_schema.table_constraints where table_name = "emp";


